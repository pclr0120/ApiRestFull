{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },

  //"ignorePatterns": ["config.js"],
  "rules": {
    "indent": [2, "spece"],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": [2, "always"],
    "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }]
  },
  "globals": {}
}
